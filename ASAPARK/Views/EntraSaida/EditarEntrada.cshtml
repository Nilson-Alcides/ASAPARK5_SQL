@model ObjetoTransferencia.EntradaSaida

@{
    ViewBag.Title = "EditarEntrada";
}

}
@using (Html.BeginForm("EditarEntrada", "EntraSaida"))
{
    @Html.AntiForgeryToken()
    <section class="layout-content">

        <nav class="navbar navbar-expand-md bg-light">
            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <i class="fas fa-caret-right"></i>
                        <span>Editar Cliente</span>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container" id="cadastrarFunc">
            <form action="" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-1">
                        @Html.LabelFor(model => model.IdEntraSaida, htmlAttributes: new { @class = "control-label col-md-1" })
                        @Html.EditorFor(model => model.IdEntraSaida, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.IdEntraSaida, "", new { @class = "text-danger" })
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.DescricaoCarro, htmlAttributes: new { @class = "control-label col-md-4" })
                        @Html.EditorFor(model => model.DescricaoCarro, new { htmlAttributes = new { placeholder = "Informe um nome", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DescricaoCarro, "", new { @class = "text-danger" })
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "control-label col-md-4" })
                        @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control", @id = "Placa" } })
                        @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger" })
                        <div class="invalid-feedback"> </div>
                    </div>
                    <div class="form-group col-md-6">
                        <br /><br />
                        &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.DropDownList("pre", "Escolha o Valor")
                        <div class="invalid-feedback"></div>
                    </div>
                </div>

                <div class="form-row">

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.DataEntrada, htmlAttributes: new { @class = "control-label col-md-4" })
                        @Html.EditorFor(model => model.DataEntrada, new { htmlAttributes = new { placeholder = "(99)9999-9999", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataEntrada, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.HoraEntrada, htmlAttributes: new { @class = "control-label col-md-4" })
                        @Html.EditorFor(model => model.HoraEntrada, new { htmlAttributes = new { placeholder = "(99)99999-9999", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoraEntrada, "", new { @class = "text-danger" })
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.MinutoEntrada, htmlAttributes: new { @class = "control-label col-md-4" })
                        @Html.EditorFor(model => model.MinutoEntrada, new { htmlAttributes = new { placeholder = "99/99/9999", @class = "form-control", @id = "Nascimento" } })
                        @Html.ValidationMessageFor(model => model.MinutoEntrada, "", new { @class = "text-danger" })
                        <div class="invalid-feedback"></div>
                    </div>

                </div>

               

                <input type="hidden" id="id" name="id" value="" />
                <button type="submit" class="btn btn-outline-primary">Atualizar</button>

                <button type="button" class="btn btn-outline-primary" style="color:black">
                    @Html.ActionLink("Voltar", "ConsultarEntrada", new { @style = "color:white" })
                </button>
            </form>
        </div>
    </section>
}
<script>
    $(document).ready(function () {
        $("#CPF").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
        $("#Telefone").inputmask("mask", { "mask": "(99)9999-9999" });
        $("#Celular").inputmask("mask", { "mask": "(99)99999-9999" });
        $("#CEP").inputmask("mask", { "mask": "99999-999" });
        $("#Nascimento").inputmask("mask", { "mask": "99/99/9999" });
    });
</script>

@Scripts.Render("~/bundles/inputmask")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
