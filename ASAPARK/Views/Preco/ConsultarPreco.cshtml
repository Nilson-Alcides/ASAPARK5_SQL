@model IEnumerable<ObjetoTransferencia.Preco>

@{
    ViewBag.Title = "ConsultarPreco";
}
@{ Layout = "~/Views/Admin/_Layout.cshtml"; }

<section class="layout-content">

    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Lista de Preço</span>
                </li>
            </ul>
            <a class="btn btn-outline-primary" href="/Preco/CadPreco" role="button">
                <span class="fas fa-user-plus" title="Cadastro" aria-hidden="true"></span>
                <span>Cadastrar Preço</span>
            </a>
        </div>
    </nav>

    <div class="container">
        <div class="table-responsive">
            <table id="Listacliente" class="table table-striped table-hover table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Código</th>
                        <th>Descrição</th>
                        <th>Valor</th>

                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var preco in Model)
                    {

                        <tr>
                            <td>@preco.IdPreco </td>
                            <td>@preco.Descricao</td>
                            <td>@preco.Valor.ToString("C2")</td>


                            <td colspan="2">
                                <button type="button" class="btn btn-info btn-sm">
                                    @Html.ActionLink("Detalhes", "PrecoDetalhes", new { id = preco.IdPreco }, new { @style = "color:white" })
                                </button>

                                <button type="button" class="btn btn-warning btn-sm fas fa-edit" style="color:black">
                                    @Html.ActionLink("Editar", "EditarPreco", new { id = preco.IdPreco }, new { @style = "color:white" })
                                </button>


                                <button type="button" class="btn btn-danger btn-sm da fas fa-trash">
                                    @Html.ActionLink("Excluir", "Excluir", new { id = preco.IdPreco },
                                    new { @style = "color:white", onclick = "return confirm('Deseja realmente Excluir esta Marca?');" })
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.bootstrap4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.colVis.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#Listacliente').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
            },

        });

    });</script>
